<div class="container">
  <h2>Add Article</h2>
  <%= form_for :article, url: articles_path do |f| %>
      <div class="form-group">
        <%= f.label :title %><br>
        <%= f.text_field :title, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :description %><br>
        <%= f.text_area :description, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :price %><br>
        <%= f.text_area :price, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.collection_select :categorie_id, Categorie.all(), :id, :title, :prompt => "Select a Category"%>
      </div>
      <div class="form-group">
        <%= f.file_field :image %>
      </div>
      <div class="form-group">
        <%= f.submit %>
      </div>
  <% end %>
</div>